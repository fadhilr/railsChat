<div class="jumbtron">
	<h1 style="text-align: center;">Chatter</h1>
	<div class="well" id="chatbox" style="height: 250px; border: solid 1px #222222; overflow-y: scroll; ">
		<% @messages.each do|message| %>
			<%= render 'messages/message', message:message %>
		<% end %>
	</div>
	<% if current_user %>
		<%= form_with model: @message do |f| %>
			<div class="input-group mb-3">
				<%= f.text_field :body, placeholder: "say somthing...", class:'form-control' %>
			</div>
			<div class="input-group-append">
				<%= f.submit "Send", class:'btn btn-secondary' %>
			</div>
		<% end %>
	<% else  %>
		<p style="text-align:center; ">you need to be <%= link_to "Signed in", new_user_session_path %> in order to chat</p>
	<% end %>
</div>